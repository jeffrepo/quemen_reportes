<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
  <record id="view_form_quemen_tablero_metas_wizard" model="ir.ui.view">
      <field name="name">view.form.quemen_reportes.tablero_metas_wizard</field>
      <field name="model">quemen_reportes.tablero_metas.wizard</field>
      <field name="arch" type="xml">
          <form string="Reporte para tablero metas">
            <group>
              <field name="fecha_inicio"/>
              <field name="fecha_final"/>
              <field name="tienda_ids"/>
            </group>
            <group>
              <field name="name" invisible="1"/>
              <field name="archivo" readonly="1" filename="name"/>
              <!-- voy a generar un archivo con 1, solo lectura
              readonly igual a 0 voy adjuntar un archivo -->

            </group>
            <footer>
                       <!-- <button name="print_report" string="Generar reporte"  type="object" class="btn-primary"/> -->
                       <button name="generando_excel" string="Reporte excel" type="object" class="oe_highlight"/>
                       <!-- name nombre de la funcion, string nombre del boton,  -->
                       <button string="Cancel" class="btn-default" special="cancel" />
                   </footer>
          </form>
      </field>
    </record>

    <act_window id="action_reporte_tablero_metas"
      name="Generar informe tablero metas "
      res_model="quemen_reportes.tablero_metas.wizard"
      binding_model="quemen_reportes.tablero_metas.wizard"
      view_mode="form"
      target="new"
      />
    <!-- hola   -->
    <menuitem
      action="action_reporte_tablero_metas"
      id="quemen_reporte_tablero_metas"
      name="Reporte tablero metas"
      parent="point_of_sale.menu_point_rep"
      sequence="58"
      />

  </data>
</odoo>
